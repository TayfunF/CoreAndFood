
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<small>Category Index Sayfası</small>
<br />

@using (Html.BeginForm())
{
    <p>
        Food Name : @Html.TextBox("p")
        <input type="submit" value="Find" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.CategoryID</td>
            <td>@k.CategoryName</td>
            <td>@k.Status</td>
            <td><a href="/Category/CategoryRemove/@k.CategoryID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@k.CategoryID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">New Category</a>